@using System.Security.Claims
<MudPaper Width="250px" Class="py-3" Elevation="0">
    <MudNavMenu>
        <AuthorizeView>
            <Authorized>
                <MudText Typo="Typo.h6" Class="px-4">
                    @(appState.UsuarioState.UsuarioActual.Nombres)
                </MudText>
                <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">
                    @(appState.UsuarioState.UsuarioActual.Email)
                </MudText>
                <MudDivider Class="my-2"/>
                <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Inicio</MudNavLink>
                <MudNavLink Href="/jugadores" Icon="@Icons.Material.Filled.People">Jugadores</MudNavLink>
                <MudNavLink Href="/equipos" Icon="@Icons.Material.Filled.People">Equipos</MudNavLink>
                <MudNavLink Href="/contratos" Icon="@Icons.Material.Filled.People">Contratos</MudNavLink>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="Administrador">
            <Authorized>
                <MudNavLink Href="/usuarios" Icon="@Icons.Material.Filled.People">Usuarios</MudNavLink>
                <MudNavLink Href="/categorias" Icon="@Icons.Material.Filled.People">Categorías</MudNavLink>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <NotAuthorized>
                <MudText Typo="Typo.h6" Class="px-4">Invitado</MudText>
                <MudDivider Class="my-2"/>
                <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Inicio</MudNavLink>
            </NotAuthorized>
        </AuthorizeView>
    </MudNavMenu>
</MudPaper>


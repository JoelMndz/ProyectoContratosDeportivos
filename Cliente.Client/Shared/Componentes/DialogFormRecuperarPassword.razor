<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5" Align="Align.Center">
            Validar código y registra contraseña
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm
            Model="@model"
            @ref = "form"
            Validation="validator.ValidateValue"
            ValidationDelay="0">
            <MudTextField 
                T="string" 
                Label="Nueva contraseña"
                For="@(() => model.Password)"
                @bind-Value="model.Password" 
                InputType="InputType.Password"/>

            <MudNumericField 
                T="string" 
                Label="Código de verificación" 
                For="@(() => model.Codigo)"
                @bind-Value="model.Codigo"
                InputType="InputType.Text"/>

        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton 
            Variant="Variant.Filled" 
            Color="Color.Error"
            OnClick="Cancelar">Cancelar</MudButton>
        <MudButton 
            Variant="Variant.Filled"
            Disabled="@Enviando"
            Color="Color.Primary" 
            OnClick="@(async ()=> await ProcesarFormulario())">
            @if (Enviando)
            {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
                        <MudText>Restaurando...</MudText>
            }
            else
            {
                        <MudText>Restaurar</MudText>
            }
            </MudButton>
    </DialogActions>
</MudDialog>